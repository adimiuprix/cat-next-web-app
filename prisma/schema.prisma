generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int         @id @default(autoincrement())
  chat_id       Int?
  balance       Int         @default(0)
  reff_code     String?
  reff_by       Int         @default(0)
  created_at    DateTime    @default(now())
}